<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/primary_variant</item>
    </style>
    <style name="Theme.Goe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Goe.AppBarOverlay">
    </style>
    <style name="Theme.Goe">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/primary_variant</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
    </style>
    <style name="Theme.Goe.ToolbarFont">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:actionMenuTextColor">@color/blue_link</item>
        <item name="android:fontFamily">@font/centurygothic_bold</item>
        <item name="actionMenuTextColor">@color/blue_link</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Theme.Goe.PopupOverlay">
    </style>
    <style name="Theme.MaterialComponents">
    </style>
    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextLarge">
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/centurygothic_bold</item>
    </style>
    <style name="TextRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/franklingothic_demi</item>
    </style>
    <style name="Text.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/centurygothic_bold</item>
    </style>
    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:height">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/franklingothic_demi</item>
    </style>
    <style name="Button.Light">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/button_light</item>
    </style>
    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/franklingothic_demi</item>
    </style>
    <style name="SearchViewFocused">
        <item name="android:textColorHint">@color/greyDark</item>
        <item name="android:textCursorDrawable">@drawable/cursor_input</item>
        <item name="colorControlActivated">@color/greyDark</item>
    </style>
    <style name="CustomTextAppearanceTab">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/franklingothic_demi</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Button.Dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_dark</item>
    </style>
    <style name="Button.Green">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_green</item>
    </style>
    <style name="Button.Red">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_red</item>
    </style>
    <style name="Button.Gray">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_gray</item>
    </style>
    <style name="BB_CartQuantityStyle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/centurygothic_bold</item>
    </style>
    <style name="BasketOperationAddBtnTxtStyleHorizontal">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/btn_basket_operation_txt_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/centurygothic_bold</item>
    </style>
    <style name="ProgressBarProgressStyle">
        <item name="colorAccent">@color/circle_progress_bar_progress_color</item>
    </style>
    <style name="NotifyMeButtonStyleV5">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryactionbuttoncolor</item>
        <item name="android:background">@drawable/btn_basket_rounded_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/centurygothic_bold</item>
    </style>
    <style name="Text.PrimaryBig">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/centurygothic_bold</item>
    </style>
    <style name="filledButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/centurygothic_bold</item>
    </style>

    <style name="filledButtonStyle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
    </style>



    <style name="GoodsFilterTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="BtnWhiteStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/kili_btn_bg_normal</item>
        <item name="android:background">@drawable/shape_white_gray</item>
    </style>


</resources>